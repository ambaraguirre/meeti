<main class="contenedor contenedor-formularios">
    <form action="" class="default-form" method="post" enctype="multipart/form-data">
    <h1><%= nombrePagina %></h1>
    <legend>Sube tu imagen que se mostrará junto a tu nombre y biografía</legend>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
        </div>
        <% if(usuario.imagen) {%>
        <div class="campo">
            <label>Imagen Actual</label>
            <img src="/uploads/perfiles/<%= usuario.imagen %>" width="200">
        </div>
        <% } else{%>
            <p>No hay imagen actual</p>
        <% } %>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Subir Imagen">
        </div>
    </form>
</main>